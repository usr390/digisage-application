<UserControl x:Class="src.Controls.FileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:src.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="27" d:DesignWidth="800">
    
    <!--This control provides the visual structure for a file presented through the file display in the main menu.-->
    <Grid Background="#F9FCFB">
        <StackPanel Margin="5">
            <TextBlock x:Name="filenameTextBlock" 
                       Text="File"
                       FontSize="18"
                       FontFamily="/Fonts/#Itim"/>
        </StackPanel>
    </Grid>
</UserControl>
